<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Timetabling system</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                   <p class="site-title"><a href="@Url.Content("~/")"><img src="~/Images/loughboroughlogo.png" alt="Loughborough Logo" style="width:275px;height:65px;"></a></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @{
                                if (Session["DEPT"] != null) { 
                                    <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Timetable", "Index", "Timetable")</li>
                                    <li>@Html.ActionLink("Rooms", "Rooms", "Home")</li>
                                    <li>@Html.ActionLink("Calendar", "Calendar", "Timetable")</li>
                                    <li>@Html.ActionLink("Settings", "Settings", "Home")</li>
                                    <li>@Html.ActionLink("Help", "Help", "Home")</li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                                }
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Your timetabling system</p>
                </div>
            </div>
            @RenderSection("scripts", required: false)
        </footer>
    </body>
</html>
